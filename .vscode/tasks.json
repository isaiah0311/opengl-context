{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "linux": {
                "command": "make -f ${workspaceFolder}/Makefile"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clean",
            "windows": {
                "command": "${workspaceFolder}/clean.bat"
            },
            "linux": {
                "command": "make -f ${workspaceFolder}/Makefile clean"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        }
    ]
}
